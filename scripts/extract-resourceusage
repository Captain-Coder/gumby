#!/usr/bin/env python
import sys
from time import mktime
import re
from os import listdir
import os
from sys import argv, exit, maxint

# Global variable (yes, not the brightest thing)
measured_record_count = {} # dictionary with the total record count per node at time measure_interval_stop
record_count = {} # same as before but at experiment end
traffic_count = {} # dictionary with the total traffic count per node at time measure_interval_stop
node_count = 0 


def write_records(all_nodes, sum_records, peers_directory, outputfile, diffoutputfile = None):
    if len(sum_records) > 0:
        all_nodes.sort()
    
        fp = open(peers_directory + outputfile, 'wb')
        fp2 = open(peers_directory + diffoutputfile, 'wb') if diffoutputfile else None
        
        print >> fp, 'time', ' '.join(all_nodes)
        if fp2:
            print >> fp2, 'time', ' '.join(all_nodes)
        
        prev_records = {}
        for time in sorted(sum_records.iterkeys()):
            print >> fp, time,
            if fp2:
                print >> fp2, time,
            
            nodes = sum_records[time]
            for node in all_nodes:
                value = nodes.get(node, prev_records.get(node, 0))
                print >> fp, value,
                
                if fp2:
                    diff = value - prev_records.get(node, 0)
                    print >> fp2, diff,
                
                prev_records[node] = value
            print >> fp, ''
            if fp2:
                print >> fp2, ''
            
        fp.close()
        if fp2:
            fp2.close()
    
def parse_resource_files(peers_directory, start_timestamp):
    def calc_diff(curtime, prevtime, curvalue, prevvalue):
        diff = curvalue - prevvalue
        diff_in_log = curtime - prevtime
        
        if diff_in_log:
            return float(diff)/diff_in_log
        return 0
    
    all_pids = set()
    all_nodes = []
    
    stimes = {}
    utimes = {}
    vsizes = {}
    rchars = {}
    wchars = {}
    readbytes = {}
    writebytes = {}
    
    prev_stimes = {}
    prev_utimes = {}
    prev_wchar = {}
    prev_rchar = {}
    prev_writebytes = {}
    prev_readbytes = {}
    prev_times = {}
    
    #we read the jiffie -> second conversion rate from the os
    #by dividing the utime and stime values by this conversion rate we will get the actual cpu seconds spend during this second.
    try: 
        sc_clk_tck = float(os.sysconf(os.sysconf_names['SC_CLK_TCK']))
    except AttributeError:
        sc_clk_tck = 100.0
    
    resource_folder = os.path.join(peers_directory, 'output', 'resource_usage')
    for filename in os.listdir(resource_folder):
        if filename.endswith('.log'):
            nodename = filename[:-4]
            all_nodes.append(nodename)
            
            fn_records = os.path.join(resource_folder, filename)
            h_records = open(fn_records)
            for line in h_records:
                parts = line.split()
                
                time = float(parts[0]) - start_timestamp
                pid = nodename + "_" + parts[1]
                
                if pid not in all_pids:
                    all_pids.add(pid)
                    
                utime = long(parts[14])
                stime = long(parts[15])
                
                utimes.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), utime, prev_utimes.get(pid, utime)) / sc_clk_tck
                stimes.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), stime, prev_stimes.get(pid, stime)) / sc_clk_tck
                utimes[time].setdefault(nodename, []).append(utimes[time][pid])
                stimes[time].setdefault(nodename, []).append(stimes[time][pid])
                
                vsize = long(parts[23])
                vsizes.setdefault(time, {})[pid] = vsize / 1024.0
                vsizes[time].setdefault(nodename, []).append(vsizes[time][pid])
                
                rss = long(parts[24])
                delay_io_ticks = long(parts[41])
                write_bytes = long(parts[-2])
                read_bytes = long(parts[-3])
                
                readbytes.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), read_bytes, prev_readbytes.get(pid, read_bytes)) / 1024.0
                writebytes.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), write_bytes, prev_writebytes.get(pid, write_bytes)) / 1024.0
                readbytes[time].setdefault(nodename, []).append(readbytes[time][pid])
                writebytes[time].setdefault(nodename, []).append(writebytes[time][pid])
                
                syscw = long(parts[-4])
                syscr = long(parts[-5])
                
                wchar = long(parts[-6])
                rchar = long(parts[-7])
                
                rchars.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), rchar, prev_rchar.get(pid, rchar)) / 1024.0
                wchars.setdefault(time, {})[pid] = calc_diff(time, prev_times.get(pid, time), wchar, prev_wchar.get(pid, wchar)) / 1024.0
                rchars[time].setdefault(nodename, []).append(rchars[time][pid])
                wchars[time].setdefault(nodename, []).append(wchars[time][pid])
                
                prev_utimes[pid] = utime
                prev_stimes[pid] = stime
                prev_rchar[pid] = rchar
                prev_wchar[pid] = wchar
                prev_readbytes[pid] = read_bytes
                prev_writebytes[pid] = write_bytes
                prev_times[pid] = time
    
    all_pids = list(all_pids)
    write_records(all_pids, utimes, peers_directory, "/output/utimes.txt")
    write_records(all_pids, stimes, peers_directory, "/output/stimes.txt")
    write_records(all_pids, wchars, peers_directory, "/output/wchars.txt")
    write_records(all_pids, rchars, peers_directory, "/output/rchars.txt")
    write_records(all_pids, writebytes, peers_directory, "/output/writebytes.txt")
    write_records(all_pids, readbytes, peers_directory, "/output/readbytes.txt")
    write_records(all_pids, vsizes, peers_directory, "/output/vsizes.txt")
    
    if len(all_nodes) > 1:
        #calculate sum for all nodes
        for dictionary in [utimes, stimes, wchars, rchars, vsizes, writebytes, readbytes]:
            for time, values in dictionary.iteritems():
                for node in all_nodes:
                    if node in values:
                        values[node] = sum(values[node])
        
        #write mean for all nodes to separate files
        write_records(all_nodes, utimes, peers_directory, "/output/utimes_node.txt")
        write_records(all_nodes, stimes, peers_directory, "/output/stimes_node.txt")
        write_records(all_nodes, wchars, peers_directory, "/output/wchars_node.txt")
        write_records(all_nodes, rchars, peers_directory, "/output/rchars_node.txt")
        write_records(all_nodes, writebytes, peers_directory, "/output/writebytes_node.txt")
        write_records(all_nodes, readbytes, peers_directory, "/output/readbytes_node.txt")
        write_records(all_nodes, vsizes, peers_directory, "/output/vsizes_node.txt")

def main(peers_directory, experiment_config = None):
    start = 0
    if experiment_config:
        f = open(experiment_config, 'r')
        for line in f:
            if line.startswith("XSTART"):
                start = int(line.split("=")[1])
                break
        f.close()
    
    parse_resource_files(peers_directory, start)

if __name__ == "__main__":
    if len(argv) != 2:
        print "Usage: %s <peers-directory> (<experiment-config>)" %(argv[0])
        import sys
        print >> sys.stderr, argv
        
        exit(1)
    
    if len(argv) == 3:
        main(argv[1], argv[2])
    else:
        main(argv[1])